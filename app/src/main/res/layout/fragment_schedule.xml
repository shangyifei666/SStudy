<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent"
    android:orientation="vertical"
    tools:context=".ui.fragment.ScheduleFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_shedule_system">

        <TextView
            android:id="@+id/tv_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textStyle="bold"
            android:textSize="50px"
            android:textColor="@color/color_text"
            android:text="第1周"/>

        <ImageView
            android:id="@+id/iv_refresh"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="15dp"
            android:src="@mipmap/refresh"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/color_shedule_bg">

        <TextView
            android:id="@+id/tv_mon"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:text="周一"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_tus"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_tus"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="周二"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tv_mon"
            app:layout_constraintRight_toLeftOf="@+id/tv_wed"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_wed"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="周三"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tv_tus"
            app:layout_constraintRight_toLeftOf="@+id/tv_thu"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_thu"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="周四"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tv_wed"
            app:layout_constraintRight_toLeftOf="@+id/tv_frd"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_frd"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="周五"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tv_thu"
            app:layout_constraintRight_toLeftOf="@+id/tv_set"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_set"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="周六"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tv_frd"
            app:layout_constraintRight_toLeftOf="@+id/tv_sun"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_sun"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="周日"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#FFE8E8E8" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="50dp"
            android:background="@color/transparent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_shedule_system">
                <TextView
                    android:id="@+id/tv_1"
                    android:layout_width="30dp"
                    android:layout_height="@dimen/shadle_hight"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="@color/color_shedule_bg"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="1"/>
                <TextView
                    android:id="@+id/tv_2"
                    android:layout_width="30dp"
                    android:layout_height="@dimen/shadle_hight"
                    app:layout_constraintTop_toBottomOf="@+id/tv_1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="@color/color_shedule_bg"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="2"/>
                <TextView
                    android:id="@+id/tv_3"
                    android:layout_width="30dp"
                    android:layout_height="@dimen/shadle_hight"
                    app:layout_constraintTop_toBottomOf="@+id/tv_2"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="@color/color_shedule_bg"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="3"/>
                <TextView
                    android:id="@+id/tv_4"
                    android:layout_width="30dp"
                    android:layout_height="@dimen/shadle_hight"
                    app:layout_constraintTop_toBottomOf="@+id/tv_3"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="@color/color_shedule_bg"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="4"/>
                <TextView
                    android:id="@+id/tv_5"
                    android:layout_width="30dp"
                    android:layout_height="@dimen/shadle_hight"
                    app:layout_constraintTop_toBottomOf="@+id/tv_4"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="@color/color_shedule_bg"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="5"/>
                <TextView
                    android:id="@+id/tv_6"
                    android:layout_width="30dp"
                    android:layout_height="@dimen/shadle_hight"
                    app:layout_constraintTop_toBottomOf="@+id/tv_5"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="@color/color_shedule_bg"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="6"/>
                <TextView
                    android:id="@+id/tv_7"
                    android:layout_width="30dp"
                    android:layout_height="@dimen/shadle_hight"
                    app:layout_constraintTop_toBottomOf="@+id/tv_6"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="@color/color_shedule_bg"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="7"/>
                <TextView
                    android:id="@+id/tv_8"
                    android:layout_width="30dp"
                    android:layout_height="@dimen/shadle_hight"
                    app:layout_constraintTop_toBottomOf="@+id/tv_7"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="@color/color_shedule_bg"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="8"/>
                <TextView
                    android:id="@+id/tv_9"
                    android:layout_width="30dp"
                    android:layout_height="@dimen/shadle_hight"
                    app:layout_constraintTop_toBottomOf="@+id/tv_8"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="@color/color_shedule_bg"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="9"/>
                <TextView
                    android:id="@+id/tv_10"
                    android:layout_width="30dp"
                    android:layout_height="@dimen/shadle_hight"
                    app:layout_constraintTop_toBottomOf="@+id/tv_9"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="@color/color_shedule_bg"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="10"/>
                <TextView
                    android:id="@+id/tv_11"
                    android:layout_width="30dp"
                    android:layout_height="@dimen/shadle_hight"
                    app:layout_constraintTop_toBottomOf="@+id/tv_10"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="@color/color_shedule_bg"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="11"/>
                <TextView
                    android:id="@+id/tv_12"
                    android:layout_width="30dp"
                    android:layout_height="@dimen/shadle_hight"
                    app:layout_constraintTop_toBottomOf="@+id/tv_11"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="@color/color_shedule_bg"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="12"/>
                <TextView
                    android:id="@+id/tv_13"
                    android:layout_width="30dp"
                    android:layout_height="@dimen/shadle_hight"
                    app:layout_constraintTop_toBottomOf="@+id/tv_12"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="@color/color_shedule_bg"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="13"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/tv_1"
                    android:background="@drawable/dottet_shape"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/tv_2"
                    android:background="@drawable/dottet_shape"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/tv_3"
                    android:background="@drawable/dottet_shape"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/tv_4"
                    android:background="@drawable/dottet_shape"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/tv_5"
                    android:background="@drawable/dottet_shape"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/tv_6"
                    android:background="@drawable/dottet_shape"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/tv_7"
                    android:background="@drawable/dottet_shape"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/tv_8"
                    android:background="@drawable/dottet_shape"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/tv_9"
                    android:background="@drawable/dottet_shape"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/tv_10"
                    android:background="@drawable/dottet_shape"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/tv_11"
                    android:background="@drawable/dottet_shape"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/tv_12"
                    android:background="@drawable/dottet_shape"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </FrameLayout>
    </ScrollView>



</LinearLayout>